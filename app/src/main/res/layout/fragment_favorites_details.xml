<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#757575"
    tools:context=".ui.FragmentFavoritesDetails" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">



        <TextView
            android:id="@+id/tvFavDetailsId"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#212121"
            android:gravity="center"
            android:background="@drawable/radius2"
            android:padding="12dp"
            android:text="@string/fav_detail_id" />



        <TextView
            android:id="@+id/tvFavDetailsTitle"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/radius1"
            android:gravity="center"
            android:text="@string/fav_detail_title"
            android:textColor="#212121"
            android:textSize="16sp"
            android:padding="12dp"
            android:textStyle="italic" />

    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnDeleteFromFavorites"
        android:src="@drawable/ic_baseline_delete_forever_24"
        android:layout_margin="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</LinearLayout>